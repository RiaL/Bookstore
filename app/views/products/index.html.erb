<div id="product_list">
  <h1>Lista produktów</h1>

<table>

<% @products.each do |product| %>
  <tr class="<%=cycle('list_line_odd', 'list_line_even') %>">
    <td><%= image_tag(product.image_url, :class => 'list_image') %></td>
    <td class="list_description">
      <dl>
        <dt><%= product.name %></dt>
        <dd><%= truncate(strip_tags(product.description), :length => 80) %></dd>
      </dl>
    </td>
    
    <td class="list_action">
      <%= link_to 'Pokaż szczegóły', :action => 'show', :id => product %><br/>
      <%= link_to 'Edytuj', :action => 'edit', :id => product%><br/>
      <%= link_to 'Usuń', {:action => 'destroy', :id => product}, confirm: 'Jesteś pewien?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>
</div>
  
<br />

<%= link_to 'Dodaj produkt', new_product_path %>
