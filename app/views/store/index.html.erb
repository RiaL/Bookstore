<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Katalog przedmiotów</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.name %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price, :unit => "zł", :format => "%n %u") %></span>
      <%= button_to 'Dodaj do koszyka', line_items_path(:product_id => product) %>
    </div>
  </div>
<%end%>  