<!DOCTYPE html>
<html>
<head>
  <title>Księgarnia WhaToRead</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "bookstore", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
  <div id="banner">
    <%=  image_tag("logo.png") %>
    <%= @page_title || "Księgarnia WhaToRead"  %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <div id="cart">
          <%= render @cart %>
        </div>
      <%end%>
      <a href="/">Katalog produktów</a><br/>
      <a href="/">Kontakt</a><br/>
      <br/>
      <a href="/admin">Panel administratora</a>
      
      <% if session[:user_id] %>
        <br/>
        <%= link_to 'Zamówienia', orders_path %><br/>
        <%= link_to 'Produkty', products_path %><br/>
        <%= link_to 'Użytkownicy', users_path %><br/>
        <br/>
        <%= button_to 'Wyloguj', logout_path, :method => :delete %>
      <% end %>
      
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>



</body>
</html>
